{
 "properties": {
  "displayName": "Inherit a tag from the resource group",
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "description": "Adds or replaces the specified tag and value from the parent resource group when any resource is created or updated. Existing resources can be remediated by triggering a remediation task.",
  "metadata": {
   "version": "1.0.0",
   "category": "Tags"
  },
  "parameters": {
   "tagFirst":{
   "type": "String",
    "metadata": {
     "displayName": "Tag Name",
     "description": "Name of the tag, such as 'environment'"
    }
   },
   "tagSecond": {
    "type": "String",
    "metadata": {
     "displayName": "Tag Name",
     "description": "Name of the tag, such as 'environment'"
    }
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "[concat('tags[', parameters('tagFirst'), ']')]",
      "notEquals": "[resourceGroup().tags[parameters('tagFirst')]]"
     },
     {
      "value": "[resourceGroup().tags[parameters('tagFirst')]]",
      "notEquals": ""
     },
     {
      "field": "[concat('tags[', parameters('tagSecond'), ']')]",
      "notEquals": "[resourceGroup().tags[parameters('tagSecond')]]"
     },
     {
      "value": "[resourceGroup().tags[parameters('tagSecond')]]",
      "notEquals": ""
     }
    ]
   },
   "then": {
    "effect": "modify",
    "details": {
     "roleDefinitionIds": [
      "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
     ],
     "operations": [
      {
       "operation": "addOrReplace",
       "field": "[concat('tags[', parameters('tagFirst'), ']')]",
       "value": "[resourceGroup().tags[parameters('tagFirst')]]"
      },
      {
       "operation": "addOrReplace",
       "field": "[concat('tags[', parameters('tagSecond'), ']')]",
       "value": "[resourceGroup().tags[parameters('tagSecond')]]"
      }
     ]
    }
   }
  }
 },
 "id": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "cd3aa116-8754-49c9-a813-ad46512ece54"
}
